<div id="feedback">
	<div class="col-5" id="feedbackForm">
		<form action="">
			<div class="form-group">
				<label for="feedbackName" class='text-light'>Name</label>
				<input type="text" class="form-control" id="feedbackName" placeholder="Your Name(optional)">
			</div>
			<div class="form-group">
				<label for='feedbackEmail' class='text-light'>Email</label>
				<input type='email' class='form-control' id='feedbackEmail' placeholder="Example@email.com(optional)">
			</div>
			<div class="form-group">
				<label for='feedbackFeedback' class='text-light'>We Appreciate Your Feedback</label>
				<textarea class='form-control' id='feedbackFeedback' rows='3' placeholder="Your Thoughts..."></textarea>
			</div>
			<div class="text-center">
				<button type='submit' class='btn btn-primary m-2'>Submit Feedback</button>
				<button type='submit' class='btn btn-danger m-2' id='closeFeedbackForm' aria-label='Close Feedback Form'>Cancel</button>
			</div>	
		</form>
	</div>
</div>