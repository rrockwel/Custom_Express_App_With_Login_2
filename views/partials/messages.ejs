<%if(typeof errors != 'undefined'){%>
<%errors.forEach((error)=>{%>
	<div class="alert alert-danger alert-dismissable fade show m-0 rounded-0" role="alert">
		<%=error.msg%>
		<button type="button" class="close" data-dismiss="alert" aria-label="close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
<%});%>
<%}%>

<%if(success_msg != '') { %>
	<div class="alert alert-success alert-dismissable fade show m-0 rounded-0" role="alert">
		<%=success_msg%>
		<button type="button" class="close" data-dismiss="alert" aria-label="close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
<%}%>

<%if(error_msg != '') {%>
	<div class="alert alert-warning alert-dismissable fade show m-0 rounded-0" role="alert">
		<%=error_msg%>
		<button type="button" class="close" data-dismiss="alert" aria-label="close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
<%}%>

<%if(error != '') {%>
	<div class="alert alert-warning alert-dismissable fade show m-0 rounded-0" role="alert">
		<%=error%>
		<button type="button" class="close" data-dismiss="alert" aria-label="close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
<%}%>